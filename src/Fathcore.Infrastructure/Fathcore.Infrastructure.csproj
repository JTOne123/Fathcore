    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Localization" Version="2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="2.2" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2" />
    <PackageReference Include="System.IO.FileSystem.AccessControl" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Fathcore.Extensions\Fathcore.Extensions.csproj" />
  </ItemGroup>

</Project>
