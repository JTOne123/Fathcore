    <None Remove="DependencyInjection\**" />
    <None Remove="Engines\**" />
    <None Remove="FluentValidation\**" />
    <None Remove="Localization\Resources\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="EngineContext.cs" />
  </ItemGroup>

  <ItemGroup>
