    <RootNamespace>Fathcore.Infrastructure</RootNamespace>
    <CodeAnalysisRuleSet>..\..\Fathcore.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="DependencyInjection\**" />
    <Compile Remove="Engines\**" />
    <Compile Remove="FluentValidation\**" />
    <Compile Remove="Localization\Resources\**" />
    <EmbeddedResource Remove="DependencyInjection\**" />
    <EmbeddedResource Remove="Engines\**" />
    <EmbeddedResource Remove="FluentValidation\**" />
